<Page x:Class="MONITOR_APP.VIEW.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MONITOR_APP.VIEW"
      xmlns:live="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" x:Name="Col"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="#FF9baec8" Name="Grid_side" Height="auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="설정" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="30" Foreground="#FFd9e1e8" FontStyle="Normal"></TextBlock>
            <Separator Grid.Row="0" VerticalAlignment="Bottom" Margin="5" Background="#FFd9e1e8"></Separator>
            <Button Grid.Row="1" Content="ADD"  HorizontalContentAlignment="Right"  Width="auto" Click="Button_ADD" Height="Auto" Foreground="#FFd9e1e8" Background="{x:Null}" BorderBrush="{x:Null}"/>
            <Button Grid.Row="2" Foreground="#FF282c37" Content="CLEAR" Click="Button_CLEAR" Height="Auto" Background="#FFd9e1e8" BorderBrush="{x:Null}"/>

        </Grid>


        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>
            <ListBox Name="listBox" ItemsSource="{Binding Vms}" 
                     HorizontalContentAlignment="Stretch"
                    ScrollViewer.CanContentScroll="False"
                    ScrollViewer.VerticalScrollBarVisibility="Hidden"
                    PreviewMouseLeftButtonDown="ListBox_LeftClick"
                    MouseLeftButtonUp="ListBox_LeftButtonUp"
                    PreviewMouseMove="ListBox_Drag"
                    Drop="ListBox_Drop"
                    AllowDrop="True" Grid.RowSpan="2">



                <!-- 리스트박스 선택 안되게 하는 코드
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Setter Property="Focusable" Value="False"/>
                    <Setter Property="IsHitTestVisible" Value="False" />
                </Style>
            </ListBox.ItemContainerStyle>
            -->

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <live:CartesianChart  Height="250"  
                                          LegendLocation="Top">
                            <live:CartesianChart.Series>
                                <live:LineSeries Title="{Binding title}" Values="{Binding data}"></live:LineSeries>
                                <!--   <live:LineSeries Title="{Binding title}" Values="4,2,3,4"></live:LineSeries>-->
                            </live:CartesianChart.Series>


                            <live:CartesianChart.Resources>
                                <Style TargetType="live:DefaultTooltip">
                                    <Setter Property="Background" Value="White"></Setter>
                                    <Setter Property="Foreground" Value="#FF6CB92E"></Setter>
                                    <Setter Property="ShowTitle" Value="False"></Setter>
                                    <!--new property-->
                                    <Setter Property="ShowSeries" Value="True"></Setter>
                                    <!--new property-->
                                    <Setter Property="FontSize" Value="16"></Setter>
                                    <Setter Property="FontWeight" Value="Bold"></Setter>
                                    <Setter Property="CornerRadius" Value="20"></Setter>
                                    <Setter Property="Width" Value="Auto"></Setter>
                                    <Setter Property="Height" Value="Auto"></Setter>
                                    <Setter Property="BorderThickness" Value="0"></Setter>
                                </Style>
                            </live:CartesianChart.Resources>



                            <live:CartesianChart.AxisX>
                                <live:Axis Title="Time" LabelsRotation="20"  Labels="{Binding Labels}" Position="LeftBottom">
                                    <!--     <live:Axis.Separator >
                                        <live:Separator Step="1" /> 
                                    </live:Axis.Separator>
                                    -->
                                </live:Axis>
                            </live:CartesianChart.AxisX>
                            <live:CartesianChart.AxisY>
                                <live:Axis Title="Measure" Position="LeftBottom"></live:Axis>
                            </live:CartesianChart.AxisY>

                        </live:CartesianChart>
                    </DataTemplate>

                </ListBox.ItemTemplate>

            </ListBox>
        </Grid>





    </Grid>
</Page>
